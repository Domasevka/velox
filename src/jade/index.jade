    footer.footer#contact
      .footer-wrap
        .container
          menu.footer-menu
            a.footer-menu__link(href="#") Contact Us
            //ul.footer-menu__list
              li.footer-menu__item.footer-menu__item--active
                a(href="#") Home
              li.footer-menu__item
                a(href="#") About
              li.footer-menu__item
                a(href="#") Services
              li.footer-menu__item
                a(href="#") Blog
              li.footer-menu__item
                a(href="#") Contact Us
          .footer__columns
            .footer__col
              .footer__item
                h4 Our adress
                p.page-footer__text House No,11132, Sector 31, Gurgaon<br>122001 India
              .footer__item
                h4 Call us
                p.page-footer__text 8 (999) 250-07-00<br>8 (999) 250-07-00
              .footer__item
                h4 Email us
                a contactus@email.com
            .footer__col
              form(method="post")
                .footer__field.footer__field--half
                  label(for="name") Name:
                  input(name="name" type="text")
                .footer__field.footer__field--half
                  label(for="name") Subject:
                  input(name="name" type="text")
                .footer__field
                  label(for="message") Your Message:
                  textarea(name="message" rows="5")
                ul.footer__actions
                  li
                    input(class="btn" value="Send message" type="submit")
            a(href="").to-top.js-to-top
             +icon('left-arrow','white_mod')
      .footer-copyright
        .container
          .footer-copyright-wrap
            p © 2016 Nishant Bazzad
            .social-links
              a(href="#").social__link
                +icon('fb','gray_mod')
              a(href="#").social__link
                +icon('twitter','gray_mod')
              a(href="#").social__link
                +icon('cp','gray_mod')
              a(href="#").social__link
                +icon('linkedin','gray_mod')
