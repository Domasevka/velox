  body.js-body
    header.page-header
      .page-header__banner
        .container
          .page-header__container
            a.page-header__logo(href="#")
              img(src="src/img/logo.png" width="130" height="38" alt="Velox")
            nav.main-nav
              .main-nav__wrapper
                +icon('bar-menu','gray_mod')
              ul.main-nav__list
                li.main-nav__item
                  a.main-nav__item-link(href="#services") Services
                li.main-nav__item
                  a.main-nav__item-link(href="#portfolio") Portfolio
                li.main-nav__item
                  a.main-nav__item-link(href="#testimonials") Testimonials
                li.main-nav__item
                  a.main-nav__item-link(href="#about") About
                li.main-nav__item
                  a.main-nav__item-link(href="#contact") Contact
            //nav.main-nav.main-nav--closed
              .main-nav__wrapper
                ul.main-nav__list
                  li.main-nav__item.main-nav__item--active
                    a.main-nav__item-link(href="#") Services
                  li.main-nav__item
                    a.main-nav__item-link(href="#") Portofolio
                  li.main-nav__item
                    a.main-nav__item-link(href="#") Testimonials
                  li.main-nav__item
                    a.main-nav__item-link(href="#") About
                  li.main-nav__item
                    a.main-nav__item-link(href="#") Contact
          .page-header__title
            h1 Velox One Page Template
            h3 Clean, Responsive, customizable one page template
          .btn-group
            a(href="#").page-header__btn.btn.btn_center.btn_md Get Started Now
    section.services#services
      .container
        header.services__header
          h2.title.title_line Our services
        .services__list
          +services ("services_illustrations", "Logo design", "Lorem Ipsum is simply dummy text of the printing and typesetting let. Lorem Ipsum has been the industry.")
          +services ("services_illustrations", "Web design", "Lorem Ipsum is simply dummy text of the printing and typesetting let. Lorem Ipsum has been the industry.")
          +services ("services_illustrations", "Branding", "Lorem Ipsum is simply dummy text of the printing and typesetting let. Lorem Ipsum has been the industry.")
          +services ("services_illustrations", "Illustrations", "Lorem Ipsum is simply dummy text of the printing and typesetting let. Lorem Ipsum has been the industry.")
    section.portfolio#portfolio
      .portfolio-wrap
        .container
          header.portfolio__header
            h2.portfolio__title.title_line Portfolio
          menu.portfolio__menu
            //ul.portfolio__list
              li.portfolio__item
                a(href="#").portfolio__item-link All
              li.portfolio__item
                a(href="#").portfolio__item-link Illustrations
              li.portfolio__item
                a(href="#").portfolio__item-link Logo
              li.portfolio__item
                a(href="#").portfolio__item-link Branding
              li.portfolio__item
                a(href="#").portfolio__item-link Web Design
          .portfolio__cols
            article.portfolio__col
              a(href="#").portfolio__img
                img(src="src/img/portfolio_1.jpg")
              header.portfolio__col-title
                h6 Agency - PSD
            article.portfolio__col
              a(href="#").portfolio__img
                img(src="src/img/portfolio_2.jpg")
              header.portfolio__col-title
                h6 Pure Vodka Branding
            article.portfolio__col
              a(href="#").portfolio__img
                img(src="src/img/portfolio_3.jpg")
              header.portfolio__col-title
                h6 Web Design
            article.portfolio__col
              a(href="#").portfolio__img
                img(src="src/img/portfolio_4.jpg")
              header.portfolio__col-title
                h6 Everest Logo
            article.portfolio__col
              a(href="#").portfolio__img
                img(src="src/img/portfolio_5.jpg")
              header.portfolio__col-title
                h6 Poster Design
            article.portfolio__col
              a(href="#").portfolio__img
                img(src="src/img/portfolio_6.jpg")
              header.portfolio__col-title
                h6 Illustration
          .btn-group
            a(href="#").portfolio__btn.btn.btn_center.btn_bg Show more
    section.brands#testimonials
      .container
        header.brands__header
          h2.brands__title.title_line Recent Brands we’ve worked with
        ul.brands__list
          li.brands__item
            a(href="#").brands__item-link
              img(src="src/img/brands_1.jpg")
          li.brands__item
            a(href="#").brands__item-link
              img(src="src/img/brands_2.jpg")
          li.brands__item
            a(href="#").brands__item-link
              img(src="src/img/brands_3.jpg")
          li.brands__item
            a(href="#").brands__item-link
              img(src="src/img/brands_4.jpg")
          li.brands__item
            a(href="#").brands__item-link
              img(src="src/img/brands_5.jpg")
          li.brands__item
            a(href="#").brands__item-link
              img(src="src/img/brands_6.jpg")
    section.testimonials#about
      .testimonials-wrap
        .container
          header.testimonials__header
            h2.title_line See what others are saying about us
          .mis-stage
            ol.mis-slider
              li.mis-slide
                a.mis-container(href="#")
                  figure
                    img(src="src/img/testimonials1.jpg" alt="photo1")
                    figcaption thanks for all1
              li.mis-slide
                a.mis-container(href="#")
                  figure
                    img(src="src/img/testimonials2.jpg" alt="photo2")
                    figcaption thanks for all2
              li.mis-slide
                a.mis-container(href="#")
                  figure
                    img(src="src/img/testimonials3.jpg" alt="photo3")
                    figcaption thanks for all3
              button.testimonials__prev(type="button")
              button.testimonials__next(type="button")
          //.testimonials__wrapper.slider
            .testimonials__items
              blockquote.testimonials__item.slider_item
