doctype html
include mixins
html(lang='en')
  head
    meta(charset='UTF-8')
    title Velox
    meta(name='viewport', content='width=device-width,initial-scale=1')
    link(rel='stylesheet', href='css/style.css')

    //link(href="bower_components/slick-carousel/slgick/slick.css", rel="stylesheet", type="text/css")
