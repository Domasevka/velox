mixin icon(name,mod)
  - mod = mod || ''
  svg(class="icon icon-" + name + " " + mod)
    use(xlink:href="src/i/sprite/sprite.svg#" + name)

mixin services (imageName, title, text)
  div.services__item
    div.services__icon-box
      img.services__icon(src="src/img/#{imageName}.svg", alt="illustrations")
    h6.services__title= title
    p.services__text= text


